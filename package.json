{
  "name": "hyatt-gpt-demo",
  "version": "1.0.0",
  "description": "Hyatt GPT Demo - Parent Directory",
  "scripts": {
    "start": "cd hyatt-gpt-prototype && npm run smart-start",
    "start-old": "npm run kill-port && cd hyatt-gpt-prototype && npm start",
    "dev": "cd hyatt-gpt-prototype && npm run dev",
    "stop": "pkill -f 'node server.js'",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "safe-start": "npm run kill-port && sleep 1 && npm run start",
    "check-port": "lsof -i:3000 || echo 'Port 3000 is free'",
    "smart-start": "cd hyatt-gpt-prototype && npm run smart-start"
  },
  "private": true,
  "dependencies": {
    "lucide-react": "^0.511.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7"
  }
}
