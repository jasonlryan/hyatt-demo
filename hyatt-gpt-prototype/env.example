# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Global OpenAI Defaults (fallback for agents) - UPDATED FOR STRUCTURED OUTPUTS
OPENAI_MODEL=gpt-4o-2024-08-06
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=45000

# RESEARCH AGENT CONFIGURATION - UPDATED FOR STRUCTURED OUTPUTS
RESEARCH_MODEL=gpt-4o-2024-08-06
RESEARCH_TEMPERATURE=0.2
RESEARCH_MAX_TOKENS=2500
RESEARCH_TIMEOUT=45000
RESEARCH_DELAY=4000

# TRENDING NEWS AGENT CONFIGURATION - UPDATED FOR STRUCTURED OUTPUTS
TRENDING_MODEL=gpt-4o-2024-08-06
TRENDING_TEMPERATURE=0.3
TRENDING_MAX_TOKENS=3000
TRENDING_TIMEOUT=45000
TRENDING_DELAY=5000

# STORY ANGLES AGENT CONFIGURATION - UPDATED FOR STRUCTURED OUTPUTS
STORY_MODEL=gpt-4o-2024-08-06
STORY_TEMPERATURE=0.4
STORY_MAX_TOKENS=3500
STORY_TIMEOUT=45000
STORY_DELAY=6000

# PR MANAGER AGENT CONFIGURATION - UPDATED FOR STRUCTURED OUTPUTS
PR_MANAGER_MODEL=gpt-4o-mini-2024-07-18
PR_MANAGER_TEMPERATURE=0.7
PR_MANAGER_MAX_TOKENS=4000
PR_MANAGER_TIMEOUT=45000
PR_MANAGER_DELAY=3000

# COLLABORATIVE PHASE CONFIGURATION
COLLABORATIVE_DELAY=2000

# DYNAMIC FLOW CONTROL CONFIGURATION
ENABLE_DYNAMIC_FLOW=true
ENABLE_REAL_DATA_SOURCES=true
ENABLE_AGENT_INTERACTION=true
ENABLE_ADAPTIVE_ROLES=true
ENABLE_QUALITY_CONTROL=true

# HUMAN-IN-THE-LOOP REVIEW
ENABLE_MANUAL_REVIEW=false

# DATA SOURCE CONFIGURATION
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key
NEWS_API_KEY=your-news-api-key
SOCIAL_MEDIA_API_KEY=your-social-media-api-key

# QUALITY CONTROL THRESHOLDS
MIN_TREND_RELEVANCE=60
MIN_AUDIENCE_CONFIDENCE=70
MIN_STORY_ANGLE_STRENGTH=65
REQUIRE_DATA_VALIDATION=true

# ADAPTIVE FLOW CONFIGURATION
SKIP_WEAK_TRENDS_THRESHOLD=50
ALTERNATIVE_STRATEGY_TRIGGER=40
AGENT_RESPONSE_TIMEOUT=30000

# Available Model Options for Structured Outputs (Responses API):
# - gpt-4o-2024-08-06 (supports structured outputs, most capable)
# - gpt-4o-mini-2024-07-18 (supports structured outputs, faster and cheaper)
# 
# Legacy models (DO NOT support structured outputs):
# - gpt-4 (legacy, does NOT support structured outputs)
# - gpt-4-turbo (legacy, does NOT support structured outputs)
# - gpt-3.5-turbo (legacy, does NOT support structured outputs)
#
# NOTE: Structured outputs require higher token limits than simple text responses
# Recommended minimums: Research=2500, Trending=3000, Story=3500, PR Manager=4000

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Campaign Storage
CAMPAIGNS_DIR=./campaigns
AUTO_SAVE=true
MAX_CAMPAIGNS=100

# System Prompt Paths
RESEARCH_PROMPT_PATH=../GPTs/research_audience_gpt.md
TRENDING_PROMPT_PATH=../GPTs/trending_news_gpt.md
STORY_PROMPT_PATH=../GPTs/story_angles_headlines_gpt.md

# API Rate Limiting
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_TOKENS_PER_MINUTE=40000

# Logging Configuration
LOG_LEVEL=info
LOG_OPENAI_CALLS=true
LOG_CAMPAIGN_CREATION=true
LOG_AGENT_RESPONSES=false

# Frontend Configuration
FRONTEND_TITLE=Hyatt GPT Agent System
FRONTEND_SUBTITLE=Collaborative PR Campaign Development
SHOW_DEBUG_INFO=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# Performance Configuration
MAX_CONCURRENT_CAMPAIGNS=5
CACHE_TTL=3600
REQUEST_TIMEOUT=60000

# Development Configuration
DEBUG_MODE=true
MOCK_OPENAI_RESPONSES=false
SIMULATE_NETWORK_DELAY=true

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_CAMPAIGN_EXPORT=true
ENABLE_COLLABORATION_MODE=true
ENABLE_ADVANCED_ANALYTICS=false 